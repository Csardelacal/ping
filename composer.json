{
    "name": "magic3w/ping",
    "description": "Micro service social network and notification manager",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "cesar",
            "email": "cesar@magic3w.com"
        }
    ],
	"scripts": {
		"test" : [
			"./vendor/bin/phpstan analyse bin/ --level 5"
		],
		"sniff" : [
			"#cp ./vendor/magic3w/php-coding-standard/.phpcs.xml ./.phpcs.xml",
			"./vendor/bin/phpcs -s --encoding=utf-8 -n -p $(git diff --diff-filter=d --cached --name-only master | grep -E '\\.php$')"
		],
		"style" : [
			"#cp ./vendor/magic3w/php-coding-standard/.phpcs.xml ./.phpcs.xml",
			"./vendor/bin/phpcbf --encoding=utf-8 -n -p $(git diff --diff-filter=d --cached --name-only master | grep -E '\\.php$')"
		]
	},
    "minimum-stability": "dev",
	"prefer-stable": true,
    "require-dev": {
        "phpstan/phpstan": "^0.12.82",
        "magic3w/php-coding-standard": "^1.0"
    },

	"repositories":
	[
			{
				"type": "vcs",
				"url": "https://github.com/Csardelacal/PHP_Codesniffer"
			}
	]
}
